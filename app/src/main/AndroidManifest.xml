<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movilprepracticasprofesional">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MovilPrePracticasProfesional">
        <activity
            android:name=".fragmente_buscarEstudent"
            android:exported="false" />
        <activity
            android:name=".fragment_BuscarDocente"
            android:exported="false" />

        <activity
            android:name=".bienvenida"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name="Notificaciones.AlarmReceiver"
            android:enabled="true" />

        <service
            android:name="Notificaciones.NotificationService"
            android:enabled="true" />


        <!-- MAKE ALARMS RESTART ON REBOOT -->
        <service android:name="Notificaciones.RebootServiceClass"/>
        <receiver android:name="Notificaciones.MyRebootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>