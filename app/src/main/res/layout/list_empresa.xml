<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:src="@drawable/empresaic" />

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_nombreemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="0dp"
        android:textColor="#000000"
        android:textSize="16sp" />

        <Button
            android:id="@+id/btnubi"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_mapa"
            android:background="@drawable/btn_azul_bordes"
            android:drawablePadding="15dp"
            android:text="Ver UbicaciÃ³n"
            android:textColor="@android:color/black" />

    </LinearLayout>
</LinearLayout>
